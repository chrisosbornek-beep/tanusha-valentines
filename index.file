<!DOCTYPE html>
<html>
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>For Tanusha ğŸ’–</title>

<style>
body {
    margin: 0;
    height: 100vh;
    font-family: Arial, sans-serif;
    overflow: hidden;
    background: linear-gradient(-45deg, #ff6ec4, #7873f5, #ff9a9e, #fad0c4);
    background-size: 400% 400%;
    animation: gradientBG 10s ease infinite;
    display: flex;
    justify-content: center;
    align-items: center;
}

@keyframes gradientBG {
    0% {background-position: 0% 50%;}
    50% {background-position: 100% 50%;}
    100% {background-position: 0% 50%;}
}

.card {
    background: rgba(255,255,255,0.15);
    backdrop-filter: blur(15px);
    padding: 40px 30px;
    border-radius: 25px;
    text-align: center;
    box-shadow: 0 10px 40px rgba(0,0,0,0.2);
    width: 90%;
    max-width: 400px;
    color: white;
}

h1 {
    font-size: 24px;
}

button {
    margin: 15px;
    padding: 12px 25px;
    border: none;
    border-radius: 30px;
    font-size: 18px;
    cursor: pointer;
    transition: 0.3s ease;
}

#yesBtn {
    background: #ff2e86;
    color: white;
}

#noBtn {
    background: white;
    position: absolute;
}

.confetti {
    position: fixed;
    font-size: 20px;
    animation: fall 3s linear forwards;
}

@keyframes fall {
    0% {transform: translateY(-10vh);}
    100% {transform: translateY(110vh);}
}
</style>
</head>

<body>

<div class="card">
    <h1 id="mainText">Tanusha, will you be my Valentine? ğŸ’•</h1>
    <button id="yesBtn" onclick="yesClicked()">Yes ğŸ’–</button>
    <button id="noBtn" onclick="moveButton()">No ğŸ˜¢</button>
</div>

<script>
let yesSize = 18;
let noClicks = 0;

const messages = [
    "Are you sure? ğŸ¥º",
    "Really sure?? ğŸ˜¢",
    "Think again Tanusha ğŸ˜­",
    "Iâ€™ll cry ğŸ’”",
    "Pleaseeee ğŸ˜­ğŸ’˜",
    "Okay now you're just teasing me ğŸ˜³"
];

function moveButton() {
    const noBtn = document.getElementById("noBtn");

    const x = Math.random() * (window.innerWidth - 100);
    const y = Math.random() * (window.innerHeight - 100);

    noBtn.style.position = "fixed";
    noBtn.style.left = x + "px";
    noBtn.style.top = y + "px";

    yesSize += 8;
    document.getElementById("yesBtn").style.fontSize = yesSize + "px";

    if (noClicks < messages.length) {
        document.getElementById("mainText").innerText = messages[noClicks];
